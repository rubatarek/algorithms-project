# Function to perform quick sort
def quick_sort(a):

    if len(a) <= 1:
        return a  # Base case: already sorted
    
    pivot = a[0]  # Choose the first element as the pivot
    less = [x for x in a[1:] if x <= pivot]  # Elements less than or equal to pivot
    greater = [x for x in a[1:] if x > pivot]  # Elements greater than pivot

    return quick_sort(less) + [pivot] + quick_sort(greater)  # Return the sorted array

# Example 
a = [100, 200, 400, 800, 1600, 3200, 6400]
print("Input array:", a)
sorted_array = quick_sort(a)
print("Output array:",sorted_array)

